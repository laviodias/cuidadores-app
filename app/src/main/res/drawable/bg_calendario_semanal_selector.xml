<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Estado selecionado -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_calendario_semanal_dia_background_selected" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_calendario_semanal_dia_background" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
</selector> 